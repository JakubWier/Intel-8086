<Window x:Class="Intel_8086.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Intel_8086"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" 
        FontFamily="Calibri"
        Background="#181735"
        >

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="35"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="15"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="2" 
                   Grid.ColumnSpan="4" 
                   Text="Jakub Wieroński" 
                   VerticalAlignment="Center" 
                   TextAlignment="Right" 
                   FontSize="12" 
                   Background="#0F0F2D" 
                   Foreground="White" 
                   Padding="0,0,5,0"
                   ></TextBlock>

        <TextBlock Grid.Row="0" 
                   Grid.Column="0" 
                   Grid.ColumnSpan="3" 
                   Text="Intel 8086 Simulator" 
                   TextAlignment="Center"
                   FontSize="26" 
                   Foreground="White" 
                   Background="#0F0F2D" 
                   Padding="10,0,0,0" 
                   FontFamily="Impact"
                   ></TextBlock>

        <TextBlock Grid.Column="3"
                       Text="Output logs" 
                       TextAlignment="Center"
                       FontSize="18" 
                       Foreground="White" 
                       Padding="0,5,0,0" 
                       Background="#1F1F4D"/>

        <Border Grid.Row="1" 
                Grid.Column="3" 
                BorderThickness="1" 
                BorderBrush="Gray"
                Grid.ColumnSpan="2"
                Grid.RowSpan="2">

            <ScrollViewer>
                <TextBlock x:Name="Output" 
                           Text="" 
                           TextWrapping="Wrap"  
                           FontSize="12" 
                           Background="#1F1F4D" 
                           Foreground="White" 
                           Padding="5,0,5,0"
                   ></TextBlock>
            </ScrollViewer>
        </Border>

        <StackPanel Grid.Row="1" 
                    Grid.RowSpan="2"
                    Orientation="Vertical" 
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top">

            <StackPanel Orientation="Horizontal">
                <Label Foreground="White" 
                       FontSize="16">AX =</Label>

                <TextBlock  x:Name="BlockAX" 
                        Text="{Binding Path=GetAX}"
                        FontSize="16" 
                        Foreground="White" 
                        VerticalAlignment="Top"
                        Margin="0,4,0,0"
                        HorizontalAlignment="Center">
                </TextBlock>
            </StackPanel>

            <StackPanel Orientation="Horizontal">
                <Label Foreground="White" FontSize="16">BX =</Label>

                <TextBlock  x:Name="BlockBX" 
                        Text="{Binding Path=GetBX}"
                        FontSize="16" 
                        Foreground="White" 
                        VerticalAlignment="Top"
                        Margin="0,4,0,0"
                        HorizontalAlignment="Center">
                </TextBlock>
            </StackPanel>

            <StackPanel Orientation="Horizontal">
                <Label Foreground="White" FontSize="16">CX =</Label>

                <TextBlock  x:Name="BlockCX" 
                        Text="{Binding Path=GetCX}"
                        FontSize="16" 
                        Foreground="White" 
                        VerticalAlignment="Top"
                        Padding="0,5,0,0"
                        HorizontalAlignment="Center">
                </TextBlock>
            </StackPanel>

            <StackPanel Orientation="Horizontal">
                <Label Foreground="White" FontSize="16">DX =</Label>

                <TextBlock  x:Name="BlockDX" 
                        Text="{Binding Path=GetDX}"
                        FontSize="16" 
                        Foreground="White" 
                        VerticalAlignment="Top"
                        Padding="0,5,0,0"
                        HorizontalAlignment="Center">
                </TextBlock>
            </StackPanel>

        </StackPanel>

        <StackPanel Grid.Row="1"
                    Grid.RowSpan="2"
                    Grid.Column="2"
                    Orientation="Vertical"
                    Margin="0,0,10,0"
                    HorizontalAlignment="Right">

            <Border BorderThickness="1"
                    BorderBrush="Gray"
                    Margin="10,0,0,0">
                <StackPanel
                        Orientation="Vertical" 
                        Background="#1F1F4D">

                    <Label FontSize="12" 
                           FontWeight="Bold" 
                           Foreground="White">Values format:</Label>

                    <RadioButton x:Name="DecRadio" 
                                 IsChecked="True" 
                                 Margin="15,5,10,0" 
                                 Foreground="White"
                                 Checked="RadioButton_Checked">DEC</RadioButton>
                    <RadioButton x:Name="HexRadio" 
                                 Margin="15,5,10,0" 
                                Foreground="White"
                                 Checked="RadioButton_Checked">HEX</RadioButton>
                    <RadioButton x:Name="BinRadio" 
                                 Margin="15,5,10,10" 
                                Foreground="White"
                                 Checked="RadioButton_Checked">BIN</RadioButton>

                </StackPanel>
            </Border>
        </StackPanel>

        <Border Grid.Row="1"
                Grid.RowSpan="2"
                Grid.Column="1"
                BorderThickness="1"
                BorderBrush="Gray"
                VerticalAlignment="Top"
                HorizontalAlignment="Left">
            
            <StackPanel Background="#1F1F4D"
                    Orientation="Horizontal">

                <StackPanel Orientation="Vertical">

                    <Label FontSize="12" 
                           FontWeight="Bold" 
                           Foreground="White">Set value to:</Label>


                    <ComboBox x:Name="SelectedRegistry"
                        Margin="10"
                        ItemsSource="{Binding Source={local:EnumBindingSource {x:Type local:RegistryType}}}">
                    </ComboBox>

                    <TextBox x:Name="InputValue"
                           VerticalAlignment="Bottom"
                           Margin="10"
                           Text="0"
                           Width="125"
                           TextAlignment="Center">
                    </TextBox>

                    <Button Content="SET"
                            Foreground="Black"
                            FontSize="14"
                            FontWeight="Bold"
                            Margin="10"
                            Click="ButtonSET_Click">
                    </Button>
                </StackPanel>

            </StackPanel>
        </Border>

    </Grid>
</Window>
